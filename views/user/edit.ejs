  <header class="bar bar-nav">
    <a class="icon icon-left-nav pull-left" href="/user"></a>
    <h1 class="title">Edit your information</h1>
  </header>
  <div class="content">
    <div class="content-padded">
    <form class="input-group" action="/user/update/<%= req.user[0].id %>" method="post">
      <div class="input-row">
        <label>Username</label>
        <input type="text" name="username" placeholder="YourUsername" value="<%= req.user[0].username %>">
      </div>
      <div class="input-row">
        <label>Full name</label>
        <input type="text" name="fullName"placeholder="Your Name" value="<%= req.user[0].fullName %>">
      </div>
      <div class="input-row">
        <label>Age</label>
        <input type="number" name="age" value="<%= req.user[0].age %>">
      </div>
      <div class="input-row">
        <label>Email</label>
        <input type="email" name="email" placeholder="example@email.com" value="<%= req.user[0].email %>">
      </div>
      <div class="input-row">
        <label>Address</label>
        <input type="text" name="address" value="<%= req.user[0].address %>">
      </div>
      <div class="input-row">
        <label>Phone</label>
        <input type="number"  name="phone" placeholder="+1-234-567-8900" value="<%= req.user[0].phone %>">
      </div>
      <br>
      <button class="btn btn-primary btn-block" type="submit">Update</button>
    </form>
  </div>
</div>

<header class="bar bar-nav">
  <a class="icon icon-left-nav pull-left" href="/task/<%= task.id %>"></a>
  <a class="icon icon-info pull-right" href="/about"></a>
  <h1 class="title">Edit Task</h1>
  <nav class="bar bar-tab">
    <a class="tab-item active" href="/task">
      <span class="icon icon-search"></span>
      <span class="tab-label">Tasks</span>
    </a>
    <a class="tab-item" href="/profile/tasks">
      <span class="icon icon-pages"></span>
      <span class="tab-label">Manage Tasks</span>
    </a>
    <a class="tab-item" href="/profile">
      <span class="icon icon-person"></span>
      <span class="tab-label">Profile</span>
    </a>
    <a class="tab-item" href="/task/new">
      <span class="icon icon-plus"></span>
      <span class="tab-label">Add Task</span>
    </a>
    <a class="tab-item" href="/chat" data-ignore="push">
      <span class="icon icon-list"></span>
      <span class="tab-label">Chat</span>
    </a>
  </nav>
</header>
<!-- Wrap all non-bar HTML in the .content div (this is actually what scrolls) -->
<div class="content">
  <div class="content-padded">


    <form action="/task/update/<%= task.id %>" method="post" class="js-task-edit-form">

      <p>Type</p>
      <select name="type">
        <option value="walk_dog" <%= task.type == "walk_dog" ? 'selected="selected"' : '' %>>Walk dog</option>
        <option value="heavy_lift" <%= task.type == "heavy_lift" ? 'selected="selected"' : '' %>>Heavy lift</option>
        <option value="cook_food" <%= task.type == "cook_food" ? 'selected="selected"' : '' %>>Cook Food</option>
        <option value="gradening" <%= task.type == "gradening" ? 'selected="selected"' : '' %>>Gardening</option>
        <option value="massage" <%= task.type == "massage" ? 'selected="selected"' : '' %>>Massage</option>
        <option value="cleaning" <%= task.type == "cleaning" ? 'selected="selected"' : '' %>>House cleaning</option>
        <option value="errand" <%= task.type == "errand" ? 'selected="selected"' : '' %>>Run Errand</option>
      </select>

      <p>Description</p>

      <textarea name="description" rows="5"><%= task.description %></textarea>

      <p>Cost</p>
      <select name="cost">
        <option value="1" <%= task.cost == "1" ? 'selected="selected"' : '' %>>1 Coins</option>
        <option value="2" <%= task.cost == "2" ? 'selected="selected"' : '' %>>2 Coins</option>
        <option value="3" <%= task.cost == "3" ? 'selected="selected"' : '' %>>3 Coins</option>
        <option value="4" <%= task.cost == "4" ? 'selected="selected"' : '' %>>4 Coins</option>
        <option value="5" <%= task.cost == "5" ? 'selected="selected"' : '' %>>5 Coins</option>
      </select>

      <hr>
      <input type="submit" class="btn btn-positive btn-block" value="Edit"/>
    </form>
  </div>
  <script type="text/javascript" src="/js/tasks.edit.js"></script>
</div>

  <header class="bar bar-nav">
    <a class="icon icon-info pull-right" href="/about"></a>
    <a class="icon icon-left-nav pull-left" href="/"></a>
    <h1 class="title">Signup</h1>
  </header>
  <!-- Wrap all non-bar HTML in the .content div (this is actually what scrolls) -->
  <div class="content">
    <div class="content-padded">
    <form class="input-group" action="/user/create" method="post">
      <div class="input-row">
        <label>Username</label>
        <input type="text" name="username" placeholder="Your Username" required="required">
      </div>
      <div class="input-row">
        <label>Password</label>
        <input type="password" name="password" placeholder="**********" required="required">
      </div>
      <div class="input-row">
        <label>Full name</label>
        <input type="text" name="fullName"placeholder="Your Name" required="required">
      </div>
      <div class="input-row">
        <label>Age</label>
        <input type="number" name="age" required="required">
      </div>
      <div class="input-row">
        <label>Email</label>
        <input type="email" name="email" placeholder="example@email.com" required="required">
      </div>
      <div class="input-row">
        <label>Address</label>
        <input type="text" name="address" required="required">
      </div>
      <div class="input-row">
        <label>Phone</label>
        <input type="number"  name="phone" placeholder="+1-234-567-8900" required="required">
      </div>
      <br>
      <button class="btn btn-primary btn-block" type="submit">Submit</button>
    </form>
  </div>
</div>
<script type="text/javascript" src="/js/signup.js"></script>
